<UserControl x:Class="ConfigOpcUa.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfigOpcUa"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <Image x:Key="Up" Source="Icons/GlyphUp.png" Height="6"/>
            <Image x:Key="Down" Source="Icons/GlyphDown.png" Height="6"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border BorderBrush="DarkGray" BorderThickness="1" Width="100" Height="22">
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="0" VerticalAlignment="Center" Margin="2,0,2,0"/>
            <StackPanel Grid.Column="1" Orientation="Vertical" MinWidth="16">
                <Button Content="{StaticResource Up}"/>
                <Button Content="{StaticResource Down}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
