<Window x:Class="WpfControlLibrary.View.DialogAddVariable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlLibrary.View"
        xmlns:vm="clr-namespace:WpfControlLibrary.ViewModel"
        mc:Ignorable="d"
        Title="Add variable" Height="300" Width="500" ResizeMode="NoResize" WindowStyle="None">
    <Window.DataContext>
        <vm:AddVariableViewModel/>
    </Window.DataContext>
    <Border Background="GhostWhite" BorderBrush="DarkGray" BorderThickness="1">
        <DockPanel LastChildFill="True">
            <Label DockPanel.Dock="Top" Content="Přidat proměnné" Background="LightSteelBlue" Foreground="White"/>
            <DockPanel DockPanel.Dock="Bottom" LastChildFill="True">
                <GroupBox DockPanel.Dock="Left" Header="Přidat">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Počet proměnných"/>
                        <local:NumericUpDown NudMin="1" NudMax="30000" NudValue="{Binding VarCount}" NudIncrement="1" ValueChanged="NumericUpDown_ValueChanged"/>
                        <Button Content="Zapsat" Margin="10,0,0,0" Click="Write_Click"/>
                    </StackPanel>
                </GroupBox>
                <Button DockPanel.Dock="Right" Content="Zpět" Width="50" Height="22" HorizontalAlignment="Right" Margin="0,0,5,0" IsDefault="True" Click="Button_Click"/>
            </DockPanel>
            <GroupBox Header="Vlastnosti">
                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Druh proměnné"/>
                        <Label Grid.Row="1" Content="Typ proměnné" Visibility="{Binding VisSimple}"/>
                        <Label Grid.Row="2" Content="Přístup zvenku" Visibility="{Binding VisSimple}"/>
                        <Label Grid.Row="3" Content="Jméno objektu" Visibility="{Binding VisObject}"/>
                        <Label Grid.Column="2" Content="Počet položek" Visibility="{Binding VisArray}"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding Kind}" SelectedValue="{Binding SelectedKind}" SelectionChanged="Kind_SelectionChanged"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding BasicTypes}" SelectedValue="{Binding SelectedBasicType}"
                                  Visibility="{Binding VisSimple}" Margin="0,2,0,0"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Access}" SelectedValue="{Binding SelectedAccess}" 
                                  Visibility="{Binding VisSimple}" Margin="0,2,0,0"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Visibility="{Binding VisObject}" Margin="0,2,0,0"/>
                        <local:NumericUpDown Grid.Column="3" NudIncrement="1" NudMin="1" NudMax="30000" NudValue="{Binding ArrayLength}"
                                             Visibility="{Binding VisArray}"/>
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="105"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Jméno" Visibility="{Binding VisId}"/>
                        <Label Grid.Row="1" Content="Identifikátor uzlu" Visibility="{Binding VisId}"/>
                        <TextBox Grid.Column="1" Text="{Binding VarName,Mode=TwoWay}" Visibility="{Binding VisId}"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding VarId,Mode=TwoWay}" Visibility="{Binding VisId}"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </DockPanel>
    </Border>
</Window>
